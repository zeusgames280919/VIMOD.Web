@model VIMOD.Domain.Models.ContenidoEducativo

@{
    ViewData["Title"] = "Detalles del Contenido";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Título</dt>
            <dd class="col-sm-8">@Model.Titulo</dd>

            <dt class="col-sm-4">Descripción</dt>
            <dd class="col-sm-8">@Model.Descripcion</dd>

            <dt class="col-sm-4">Enlace</dt>
            <dd class="col-sm-8"><a href="@Model.UrlContenido" target="_blank">@Model.UrlContenido</a></dd>

            <dt class="col-sm-4">Curso</dt>
            <dd class="col-sm-8">@Model.Curso?.Nombre</dd>

            <dt class="col-sm-4">Fecha de Publicación</dt>
            <dd class="col-sm-8">@Model.FechaPublicacion.ToShortDateString()</dd>

            <dt class="col-sm-4">Activo</dt>
            <dd class="col-sm-8">@(Model.EsActivo ? "Sí" : "No")</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.ContenidoId" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
