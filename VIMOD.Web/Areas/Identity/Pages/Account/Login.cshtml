@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row justify-content-center w-100">
        <div class="col-md-5 col-lg-4 col-xl-3">
            <section class="card shadow-sm p-4">
                <h2 class="text-center mb-4">Iniciar sesión</h2>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <!-- Campo Email -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Campo Password -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Recordar contraseña -->
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" type="checkbox" />
                        <label class="form-check-label" asp-for="Input.RememberMe">Recordarme</label>
                    </div>

                    <!-- Botón Iniciar sesión -->
                    <div class="d-grid">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Iniciar sesión</button>
                    </div>

                    <!-- Enlaces de acción -->
                    <div class="mt-3 text-center">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">¿No tienes cuenta? Regístrate</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo de confirmación</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>

        <!-- Imagen decorativa -->
        <div class="col-md-6 d-none d-md-block">
            <section>
                <img class="img-fluid rounded" src="/img/Arqui.webp" alt="Architecture image" style="display: block; margin: 0 auto;" />
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
