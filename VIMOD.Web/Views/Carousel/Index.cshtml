@model IEnumerable<VIMOD.Domain.Models.Carousel>

@{
    ViewData["Title"] = "Listado de Carruseles";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Carruseles</h2>
        <a asp-action="Create" class="btn btn-success rounded-pill">
            <i class="bi bi-plus-circle me-2"></i>Nuevo Carrusel
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Titulo)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Descripcion)</th>
                    <th>@Html.DisplayNameFor(model => model.First().ImagenUrl)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                        <td>@Html.DisplayFor(modelItem => item.ImagenUrl)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning rounded-pill me-1">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white rounded-pill me-1">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-pill">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
