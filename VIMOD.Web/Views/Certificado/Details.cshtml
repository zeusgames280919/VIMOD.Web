@model VIMOD.Domain.Models.Certificado
@{
    ViewData["Title"] = "Detalles del Certificado";
}

<h1>Detalles del Certificado</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FechaEmision)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaEmision)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.RutaArchivo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.RutaArchivo)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdCurso)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IdCurso)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdUsuario)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IdUsuario)</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.IdCertificado" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
