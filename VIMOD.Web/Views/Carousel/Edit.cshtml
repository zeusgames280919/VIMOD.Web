@model VIMOD.Domain.Models.Carousel

@{
    ViewData["Title"] = "Editar Carrusel";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-white rounded-top-4">
            <h2 class="mb-0">Editar Carrusel</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Titulo" class="form-label fw-semibold">Título</label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label fw-semibold">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ImagenUrl" class="form-label fw-semibold">URL de la Imagen</label>
                    <input asp-for="ImagenUrl" class="form-control" />
                    <span asp-validation-for="ImagenUrl" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                        <i class="bi bi-save me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-end bg-light rounded-bottom-4">
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Volver a la Lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}