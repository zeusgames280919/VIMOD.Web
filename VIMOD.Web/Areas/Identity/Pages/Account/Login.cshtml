@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="row shadow-lg rounded-4 overflow-hidden" style="max-width: 1000px; width: 100%;">

        <!-- Sección de imagen -->
        <div class="col-md-6 d-none d-md-block p-0">
            <img src="/img/Arqui.webp" alt="Imagen decorativa" class="img-fluid h-100" style="object-fit: cover;">
        </div>

        <!-- Sección de login -->
        <div class="col-md-6 bg-white p-5">
            <h2 class="text-center mb-4">INICIAR SESIÓN</h2>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <!-- Campo Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="correo@ejemplo.com" />
                    <label asp-for="Input.Email">Correo electrónico</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Campo Contraseña -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Contraseña" />
                    <label asp-for="Input.Password">Contraseña</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Recordarme -->
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Recordarme</label>
                </div>

                <!-- Botón Iniciar sesión -->
                <div class="d-grid mb-3">
                    <button id="login-submit" type="submit" class="btn btn-dark btn-lg rounded-pill">Iniciar sesión</button>
                </div>

                <!-- Enlaces -->
                <div class="text-center">
                    <p><a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">¿Olvidaste tu contraseña?</a></p>
                    <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">¿No tienes cuenta? Regístrate</a></p>
                    <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">Reenviar correo de confirmación</a></p>
                </div>
            </form></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
