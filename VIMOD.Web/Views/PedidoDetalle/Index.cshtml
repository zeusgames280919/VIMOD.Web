@model IEnumerable<VIMOD.Domain.Models.PedidoDetalle>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioIndividual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioIndividual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.CodigoPostal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDetallePedido">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDetallePedido">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDetallePedido">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
